{
  "name": "Ventilairsec Home Assistant Addons",
  "url": "https://github.com/fortinric88/Ventilairsec2HA",
  "maintainer": "fortinric88 <https://github.com/fortinric88>",
  "codeowners": [
    "@fortinric88"
  ],
  "addons": [
    {
      "name": "Ventilairsec Enocean",
      "slug": "ventilairsec_enocean",
      "description": "Ventilairsec VMI Purevent integration via Enocean protocol",
      "arch": [
        "amd64",
        "armv7",
        "arm64"
      ],
      "url": "https://github.com/fortinric88/Ventilairsec2HA/tree/main/addons/ventilairsec_enocean",
      "version": "1.0.0",
      "image": "ghcr.io/fortinric88/ventilairsec-enocean-{BUILD_ARCH}",
      "startup": "services",
      "boot": "auto",
      "homeassistant": "2023.10.0",
      "network_mode": "host",
      "privileged": [
        "NET_ADMIN"
      ],
      "ports": {
        "55006/tcp": 55006
      },
      "devices": [
        "/dev/ttyUSB0",
        "/dev/ttyUSB1",
        "/dev/ttyACM0",
        "/dev/ttyACM1",
        "/dev/mem",
        "/dev/gpiomem"
      ],
      "volumes": {
        "logs": "/var/log/ventilairsec"
      },
      "options": {
        "communication_type": "serial",
        "serial_port": "/dev/ttyUSB0",
        "serial_rate": 115200,
        "gpio_mode": "spi",
        "gpio_tx_pin": 24,
        "gpio_rx_pin": 25,
        "gpio_reset_pin": 17,
        "socket_port": 55006,
        "cycle_time": 0.3,
        "debug_logging": false
      },
      "schema": {
        "communication_type": "select",
        "serial_port": "select",
        "serial_rate": "integer",
        "gpio_mode": "select",
        "gpio_tx_pin": "integer",
        "gpio_rx_pin": "integer",
        "gpio_reset_pin": "integer",
        "socket_port": "integer",
        "cycle_time": "float",
        "debug_logging": "boolean"
      }
    }
  ]
}
