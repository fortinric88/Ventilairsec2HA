# Ventilairsec Enocean Configuration File
# Example configuration for Home Assistant addon

[global]
# MQTT Configuration
mqtt_broker = localhost
mqtt_port = 1883
mqtt_user = 
mqtt_password = 
serial_port = /dev/ttyUSB0
serial_rate = 57600
debug = false
overlay = ha
db_file = /var/lib/ventilairsec/device_db.json
ha_discovery_prefix = homeassistant

